 {{#if msg}}
    <h2 style="text-align: center; color:cadetblue; font-size:large; display:block ; padding-bottom: 10px">{{msg}}</h2>
 {{/if}}
 {{>hero}}
 <section class="classicMeals">
     {{#each kits}}
        <h2>{{Category}}</h2>
    <div class="classicMealItems">
        {{#each mealKits}}
        <div class="classicMealItem">
            <a href="/meal-kits/detail/{{_id}}"><img src={{ImageURL}} width="200"></a>
            <h4>{{Title}}</h4>
            <p>{{Description}}</p>
        </div>
        {{/each}}
    </div>
    {{else}}
    <h3>No kits yet..</h3>
    {{/each}}
</section>
