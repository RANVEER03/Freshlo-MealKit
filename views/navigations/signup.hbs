<div class ="container">
        <h2>Sign Up</h2>
        <p>Create your account with your email address and password</p>
        <form method="post" action="signup">
            
            <input type="text" name="firstname" placeholder="First Name" value="{{value.firstname}}">
            {{#if validation.firstname}}
            <span>{{validation.firstname}}</span>
            {{/if}}
            <input type="text" name="lastname" placeholder="Last Name" value="{{value.lastname}}">
            {{#if validation.lastname}}
            <span>{{validation.lastname}}</span>
            {{/if}}
            <input type="text" name="emailaddress" placeholder="Email Address" value="{{value.emailaddress}}">
            {{#if validation.emailaddress}}
            <span>{{validation.emailaddress}}</span>
            {{/if}}
            {{#if mailValid}}
            <span>{{mailValid}}</span>
            {{/if}}
            <input type="text" name="password" placeholder="Password" value="{{value.password}}">
            {{#if validation.password}}
            <span>{{validation.password.string}}{{validation.password}}</span>          
            {{/if}}
            <input type="file" name="profilepicture" placeholder="Add file" value="{{value.profilepicture}}">
            
            <input type="submit" name="signup" value="Sign Up Today">
        </form>
</div> 
